{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "airbnb"
  ],
  "settings": {
      "import/resolver": {
      "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
      }
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "@typescript-eslint"
  ],
  "rules": {
    "no-multiple-empty-spaces": "off",
    "react/no-unstable-nested-components": 0,
    "react/no-namespace": 0,
    "react/prefer-exact-props": 0,
    "react/no-arrow-function-lifecycle": 0,
    "react/no-invalid-html-attribute": 1,
    "react/no-unused-class-component-methods": "off",
    "react/function-component-definition": [2, {
      "namedComponents": "arrow-function"
    }],

    "indent": "off",
    "react/jsx-indent": "off",
    "react/jsx-indent-props": "off",

    // section to disable rules from normal compiler to use typescript version of it
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",

    "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"],

    "semi": "off",
    "@typescript-eslint/semi": "error",

    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"],
    // end of section


    // make possible to add a click event within a paragraph
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-noninteractive-element-interactions": ["off"],

    "max-len": ["error", {
      "code": 180
    }],
    "no-unused-expressions": [2, {
      "allowShortCircuit": true
    }],
    "react/no-array-index-key": "off",
    "react/prop-types": "off",
    "react/jsx-one-expression-per-line": [0, { "allow": "single"}],
    "linebreak-style": 0,
    "import/no-unresolved": [0],
    "no-return-assign": "off",
    "react/jsx-filename-extension": [0],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
